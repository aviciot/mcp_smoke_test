# Environment Variables for MCP Smoke Test
# =========================================

# Environment (dev, prod, or default)
ENV=default

# ========================================
# MCP SERVER CONFIGURATION
# ========================================

# Container and service name
MCP_CONTAINER_NAME=mcp_smoke
MCP_NAME=mcp-smoke

# Server port (internal: 8200, external: use docker port mapping)
MCP_PORT=8200

# Auto-Discovery (automatically load all tools/resources/prompts)
AUTO_DISCOVER=true

# ========================================
# AUTHENTICATION (API KEY-BASED)
# ========================================
# Enable authentication (true/false)
AUTH_ENABLED=true

# API Keys for Role-Based Access Control
# Generate secure keys: python -c "import secrets; print(secrets.token_urlsafe(32))"
ADMIN_API_KEY=admin-key-replace-with-secure-random
USER_API_KEY=user-key-replace-with-secure-random

# ========================================
# POSTGRESQL DATABASE
# ========================================
DB_HOST=localhost
DB_PORT=5436  # External port (container port 5432 mapped to 5436)
DB_NAME=mcp
DB_SCHEMA=mcp_smoke
DB_USER=mcp
DB_PASSWORD=mcp

# ========================================
# STORAGEGRID (S3-COMPATIBLE) CONFIGURATION
# ========================================
STORAGEGRID_ENDPOINT=https://storagegrid.example.com
STORAGEGRID_ACCESS_KEY=your-access-key
STORAGEGRID_SECRET_KEY=your-secret-key
STORAGEGRID_BUCKET=documents-bucket

# ========================================
# COMPARISON DATABASES
# ========================================
# Oracle Production
ORACLE_PROD_HOST=oracle-prod.example.com
ORACLE_PROD_SERVICE=PROD
ORACLE_PROD_USER=readonly_user
ORACLE_PROD_PASSWORD=secure-password-here

# Oracle Test
ORACLE_TEST_HOST=oracle-test.example.com
ORACLE_TEST_SERVICE=TEST
ORACLE_TEST_USER=readonly_user
ORACLE_TEST_PASSWORD=secure-password-here

# MySQL Production
MYSQL_PROD_HOST=mysql-prod.example.com
MYSQL_PROD_DATABASE=production_db
MYSQL_PROD_USER=readonly_user
MYSQL_PROD_PASSWORD=secure-password-here

# MySQL Test
MYSQL_TEST_HOST=mysql-test.example.com
MYSQL_TEST_DATABASE=test_db
MYSQL_TEST_USER=readonly_user
MYSQL_TEST_PASSWORD=secure-password-here

# PostgreSQL Production
POSTGRES_PROD_HOST=postgres-prod.example.com
POSTGRES_PROD_DATABASE=production_db
POSTGRES_PROD_USER=readonly_user
POSTGRES_PROD_PASSWORD=secure-password-here

# PostgreSQL Test
POSTGRES_TEST_HOST=postgres-test.example.com
POSTGRES_TEST_DATABASE=test_db
POSTGRES_TEST_USER=readonly_user
POSTGRES_TEST_PASSWORD=secure-password-here

# ========================================
# GITHUB FEEDBACK SYSTEM
# ========================================
GITHUB_TOKEN=your-github-token-here

# ========================================
# LOGGING
# ========================================
LOG_LEVEL=INFO
LOG_FORMAT=text  # text or json
# CUSTOM ENVIRONMENT VARIABLES
# ========================================
# Add your application-specific variables below
# Examples:
# DATABASE_URL=postgresql://user:pass@host:5432/dbname
# API_KEY=your_api_key_here
# EXTERNAL_SERVICE_URL=https://api.example.com
